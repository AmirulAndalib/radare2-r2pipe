{
  "compilerOptions": {
    "baseUrl": "r2pipe",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "nodenext",
    "lib": ["esnext"],
    "declaration": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./r2pipe"
  },
  "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
  "include": [
    "r2pipe/index.ts",
    "test.ts"
  ]
}
